<%= form_with(model: event, local: true) do |form| %>
<div class="row">
    <div class="col-md-6">
        <% if event.errors.any? %>
            <div class="alert alert-danger">
                <b><%= pluralize(event.errors.count, "error") %> prevented this event from being saved:</b>

                <ul>
                    <% event.errors.full_messages.each do |message| %>
                        <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        <% end %>

        <div class="form-group">
            <%= form.label :name %>
            <%= form.text_field :name, id: :event_name, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :description %>
            <%= form.text_area :description, id: :event_description, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :image %>
            <%= form.file_field :image, id: :event_image, class: "form-control" %>
        </div>

        <div class="form-group">
            <%= form.label :start_time %>
            <div><%= form.text_field :start_time, id: :event_start_time, class: "form-control" %></div>
        </div>

        <div class="form-group">
            <%= form.label :end_time %>
            <div><%= form.text_field :end_time, id: :event_end_time, class: "form-control" %></div>
        </div>

        <div class="form-group">
            <%= form.label :email %>
            <%= form.text_field :email, id: :event_email, class: "form-control" %>
            <span class="help-text">We will use this field to contact you if there are any issues with the event.</span>
        </div>

        <div class="form-group">
            <%= form.label :website %>
            <%= form.text_field :website, id: :event_website, class: "form-control" %>
            <span class="help-text">Optional, A link to a website associated with this event.</span>
        </div>

        <div class="form-group">
            <%= form.label :facebook %>
            <%= form.text_field :facebook, id: :event_facebook, class: "form-control" %>
            <span class="help-text">Optional, A link to the facebook event associated with this event.</span>
        </div>
    </div>
    <div class="col-md-6">
        <b>Preview</b>
        <%= render 'preview' %>
    </div>
</div>
<div class="actions float-left">
    <%= form.submit class: 'btn btn-primary' %>
</div>
<% end %>
